@page
@model LoginModel

@{
    ViewData["Title"] = "Trang Đăng Nhập";
}

<div class="container contenti">
    <div class="row justify-content-md-center">
        <div class="col-md-4">
            <section>
                <form id="form" method="post">
                    <h4>Đăng Nhập</h4>
                    <hr />
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button id="loginBtn" type="button" class="btn btn-default">Đăng nhập</button>
                    </div>
                    <div class="form-group">
                        <!--<p>
                            <a asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>-->
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Đăng kí tài khoản mới</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
<script>
        $(function () {
            $('#form').bind('keypress keydown keyup', function (e) {
                if (e.keyCode == 13) { e.preventDefault(); }
            });

            $('#loginBtn').on('click', function () {
                var hasErrors = false;

                $('#form input').each(function (i, item) {
                    var value = $(this).val();
                    if (value == '' || value == null) {
                        $(this).addClass('validateInput');
                        hasErrors = true;
                    }
                    else {
                        $(this).removeClass('validateInput');
                    }
                });
                if (hasErrors) {
                    return false;
                }
                else {
                    $('#form').submit();
                }
            });

            $('input').on('input', function () {
                var value = $(this).val();

                if (value == null || value == '') {
                    $(this).addClass('validateInput')
                }
                else {
                    $(this).removeClass('validateInput');
                }
            });

            if ('@ViewData["Error"]' != null && '@ViewData["Error"]' != '') {
                toastr.error('@ViewData["Error"]');
            }
         });
</script>
}
