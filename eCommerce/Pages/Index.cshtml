                        <p><a class="btn btn-lg btn-primary" href="#" role="button">Browse gallery</a></p>
                    </div>
                </div>
            </div>-->
        </div>
        <a class="carousel-control-prev" href="#mainCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#mainCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

}
<div class="album contenti">
    <div class="container">
        <div class="row">
            @foreach (var item in Model.Products)
            {
                <div class="col-md-3 col-sm-6 col-xs-12">
                    <div class="product-wrapper">
                        @if (item.IsOnSale)
                        {
                            <img class="sale" src="/images/sale.png" />
                        }
                        <div class="item">
                            <a href="@item.Url">
                                <img src="@item.ImagePath" alt="Thumbnail" style="width: 100%; display: block;" data-holder-render="true" />
                            </a>
                            <div class="description">
                                <a href="@item.Url">@item.Title</a>
                                <div class="price">
                                    @if (item.IsOnSale)
                                    {
                                        <h4 class="currentPrice" style="float:left; margin-right: 10px;">@item.SalePrice VNĐ</h4>
                                        <label class="oldPrice">@item.Price VNĐ</label>
                                    }
                                    else
                                    {
                                        <h4 class="currentPrice">@item.Price VNĐ</h4>
                                    }
                                </div>
                            </div>
                            <div class="action text-center">
                                <a href="@item.Url" class="btn">Chi Tiết</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
